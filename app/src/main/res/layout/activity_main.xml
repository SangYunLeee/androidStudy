<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_weight="1"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_width="0dp">
        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="#ff1222"
            >
        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="#dd1155"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"

        android:layout_weight="1"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#E84949"
            android:layout_width="wrap_content">
        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="#FBF824"
            >
        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="#D87596"
            >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:weightSum="3"

        android:layout_weight="1"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#BD8EC5"
            android:layout_width="wrap_content">
        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="#85A8FF"
            >
        </ImageView>
        <ImageView
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:background="#6DFFF1"
            >
        </ImageView>
    </LinearLayout>





</LinearLayout>